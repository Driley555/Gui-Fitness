import tkinter as tk
from tkinter import messagebox

class FitnessTrackerApp:
    def __init__(self, master):
        self.master = master
        self.master.title("Fitness Tracker")

        # Variables for workout logging
        self.workout_duration = tk.StringVar()
        self.workout_intensity = tk.StringVar()
        self.calories_burned = tk.StringVar()

        # Variables for nutrition monitoring
        self.food_entry = tk.StringVar()

        self.create_widgets()

    def create_widgets(self):
        # Workout Logging Section
        workout_frame = tk.LabelFrame(self.master, text="Workout Logging", padx=10, pady=10)
        workout_frame.pack(padx=10, pady=10, fill=tk.BOTH, expand=True)

        # Workout Entry Widgets
        tk.Label(workout_frame, text="Duration (mins):").grid(row=0, column=0, padx=5, pady=5, sticky=tk.E)
        tk.Entry(workout_frame, textvariable=self.workout_duration).grid(row=0, column=1, padx=5, pady=5)

        tk.Label(workout_frame, text="Intensity (1-10):").grid(row=1, column=0, padx=5, pady=5, sticky=tk.E)
        tk.Entry(workout_frame, textvariable=self.workout_intensity).grid(row=1, column=1, padx=5, pady=5)

        tk.Label(workout_frame, text="Calories Burned:").grid(row=2, column=0, padx=5, pady=5, sticky=tk.E)
        tk.Entry(workout_frame, textvariable=self.calories_burned).grid(row=2, column=1, padx=5, pady=5)

        log_button = tk.Button(workout_frame, text="Log Workout", command=self.log_workout)
        log_button.grid(row=3, columnspan=2, pady=10)

        # Nutrition Monitoring Section
        nutrition_frame = tk.LabelFrame(self.master, text="Nutrition Monitoring", padx=10, pady=10)
        nutrition_frame.pack(padx=10, pady=10, fill=tk.BOTH, expand=True)

        tk.Label(nutrition_frame, text="Food Entry:").grid(row=0, column=0, padx=5, pady=5, sticky=tk.E)
        tk.Entry(nutrition_frame, textvariable=self.food_entry).grid(row=0, column=1, padx=5, pady=5)

        log_food_button = tk.Button(nutrition_frame, text="Log Food", command=self.log_food)
        log_food_button.grid(row=1, columnspan=2, pady=10)

    def log_workout(self):
        duration = self.workout_duration.get()
        intensity = self.workout_intensity.get()
        calories = self.calories_burned.get()

        # Placeholder action (to be implemented)
        messagebox.showinfo("Workout Logged", f"Workout Logged:\nDuration: {duration} mins\nIntensity: {intensity}\nCalories Burned: {calories}")

    def log_food(self):
        food_entry = self.food_entry.get()

        # Placeholder action (to be implemented)
        messagebox.showinfo("Food Logged", f"Food Logged:\nEntry: {food_entry}")

def main():
    root = tk.Tk()
    app = FitnessTrackerApp(root)
    root.mainloop()

if __name__ == "__main__":
    main()
